@model IEnumerable<Codapalooza.Models.Project>
@{
  ViewBag.Title = "Index";
}
<h2>
  Index</h2>
<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table width="100%">
  @foreach (var item in Model)
  {
  <tr>
    <td width="50px">
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
        @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
    <td>
      <span style="font-size: 16pt">@item.ProjectName</span><br />
      <span style="font-size: 6pt;">proposed by @item.Participant.FirstName @item.Participant.LastName</span><br />
      <div style="margin: 10px 0px 10px 0px;">@item.ElevetorPitch</div>
      <span style="font-size: 6pt;">Technologies: @item.Technologies</span>
    </td>
  </tr>
  }
</table>
